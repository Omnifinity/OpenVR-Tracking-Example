{
  "action_manifest_version": 1,
  "alias_info": {},
  "app_key": "system.generated.openvr_tracking_example.exe",
  "bindings": {
    "/actions/demo": {
      "poses": [
        {
          "output": "/actions/demo/in/hand_left",
          "path": "/user/hand/left/pose/raw"
        },
        {
          "output": "/actions/demo/in/hand_right",
          "path": "/user/hand/right/pose/raw"
        }
      ],
      "sources": [
        {
          "inputs": {
            "click": {
              "output": "/actions/demo/in/clickaction"
            },
            "position": {
              "output": "/actions/demo/in/analoginput"
            },
            "touch": {
              "output": "/actions/demo/in/touchaction"
            }
          },
          "mode": "trackpad",
          "path": "/user/hand/left/input/trackpad"
        },
        {
          "inputs": {
            "click": {
              "output": "/actions/demo/in/hidecubes"
            }
          },
          "mode": "button",
          "path": "/user/hand/left/input/trigger"
        }
      ]
    }
  },
  "category": "steamvr_input",
  "controller_type": "knuckles",
  "description": "Default Index Controller bindings for openvr_tracking_example.",
  "name": "My openvr_tracking_example Index Controller Bindings",
  "options": {},
  "simulated_actions": []
}
